{
	"name": "intelregistry",
	"displayName": "Intel Registry",
	"description": "Registry for Images hosted by Intel",
	"version": "0.0.1",
	"publisher": "barykrg",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "Intel Registry",
					"icon": "$(server-environment)"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "catalog",
					"name": "Intel Catalog"
				},
				{
					"id": "installedApplication",
					"name": " Installed Applications"
				}
			]
		},
		"commands": [
			{
				"command": "intelregistry.refreshcatalogue",
				"title": "Refresh Catalog",
				"icon": "$(refresh)"
			},
			{
				"command": "intelregistry.pull",
				"title": "Pull Image",
				"icon": "$(cloud-download)"
			},
			{
				"command": "intelregistry.refreshdownload",
				"title": "Refresh Downloads",
				"icon": "$(refresh)"
			},
			{
				"command": "intelregistry.createEnvironment",
				"title": "Create Development Environment",
				"icon": "$(gear)"
			},
			{
				"command": "intelregistry.add",
				"title": "Add to development environment",
				"icon": "$(plus)"
			},
			{
				"command": "intelregistry.readme",
				"title": "Open Official Documentations",
				"icon": "$(book)"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "intelregistry.refreshcatalogue",
					"when": "view == catalog",
					"group": "navigation"
				},
				{
					"command": "intelregistry.refreshdownload",
					"when": "view == installedApplication",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "intelregistry.createEnvironment",
					"when": "view == installedApplication && viewItem==Image",
					"group": "inline"
				},
				{
					"command": "intelregistry.pull",
					"when": "view == catalog && viewItem==Image",
					"group": "inline"
				},
				{
					"command": "intelregistry.add",
					"when": "view == installedApplication && viewItem==program",
					"group": "inline"
				},
				{
					"command": "intelregistry.readme",
					"when": "view == catalog && viewItem==Image",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.12.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.45.0",
		"typescript": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2",
		"ftp": "^0.3.10",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2",
		"minimist": "^0.2.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/barykrg/Intel-Registry.git"
	}
}
